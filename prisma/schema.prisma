generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           String      @id @default(uuid())
  projectName  String
  name         String
  priority     Priority
  assignedUsers String
  dueDate      DateTime
  status       Status
  description  String?
  notes        String?
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
